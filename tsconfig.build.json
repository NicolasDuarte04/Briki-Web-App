{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "client/src/archive/**/*",
    "client/src/hooks/use-auth-simple.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "scripts/**/*"
  ]
} 